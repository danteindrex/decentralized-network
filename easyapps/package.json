{
  "name": "ai-network-node",
  "version": "1.0.0",
  "description": "Decentralized AI Network - Universal Node Application",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "babel src -d build && cp src/index.html build/index.html && cp -r assets build/assets",
    "dev": "electron . --dev",
    "package": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build:all"
  },
  "build": {
    "appId": "com.ainetwork.node",
    "productName": "AI Network Node",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Network"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [
    "ai",
    "blockchain",
    "decentralized",
    "inference",
    "node"
  ],
  "author": "AI Network Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "form-data": "^4.0.0",
    "ipfs-http-client": "^60.0.1",
    "node-forge": "^1.3.1",
    "qrcode": "^1.5.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "web3": "^4.0.0",
    "ws": "^8.14.0"
  }
}
